<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="loginVM" type="com.mob.app.modules.login.data.viewmodel.LoginVM"/>
    </data>
    <LinearLayout android:gravity="start" android:id="@+id/linearLogin"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyleyellow_100">
        <TextView android:ellipsize="end" android:id="@+id/txtWelcome"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_21pxh"
            android:layout_marginStart="@dimen/_21pxh"
            android:layout_marginTop="@dimen/_50pxv"
            android:layout_width="wrap_content"
            android:lineSpacingExtra="@dimen/_7pxh"
            android:singleLine="true"
            android:text="@{loginVM.loginModel.txtWelcome}"
            style="@style/txtABeeZeeitalic36" tools:text="@string/lbl_welcome"/>
        <TextView android:ellipsize="end"
            android:id="@+id/txtLoginorSignu"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_21pxh"
            android:layout_marginStart="@dimen/_21pxh"
            android:layout_marginTop="@dimen/_1pxv"
            android:layout_width="wrap_content"
            android:lineSpacingExtra="@dimen/_4pxh"
            android:singleLine="true"
            android:text="@{loginVM.loginModel.txtLoginorSignu}"
            style="@style/txtABeeZeeregular17" tools:text="@string/msg_login_or_sign_u"/>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearRowlogin"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16pxh"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_20pxv"
            android:layout_width="match_parent"
            android:orientation="horizontal" style="@style/groupStyleblue_100cornerRadius">
            <androidx.appcompat.widget.AppCompatButton
                android:ellipsize="end" android:gravity="center"
                android:id="@+id/btnLogin"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10pxv"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_weight="0.72" android:layout_width="0dp"
                android:lineSpacingExtra="@dimen/_4pxh"
                android:paddingBottom="@dimen/_11pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_11pxv"
                android:singleLine="true"
                android:text="@string/lbl_login"
                android:textAllCaps="false"
                style="@style/btnSolidRounded" tools:text="@string/lbl_login"/>
            <LinearLayout android:gravity="center_horizontal"
                android:id="@+id/linearColumnsignup"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_19pxv"
                android:layout_marginEnd="@dimen/_70pxh"
                android:layout_marginStart="@dimen/_67pxh"
                android:layout_marginTop="@dimen/_22pxv"
                android:layout_weight="0.28" android:layout_width="0dp"
                android:orientation="vertical" style="@style/groupStylecornerRadius_1">
                <TextView android:ellipsize="end"
                    android:gravity="start" android:id="@+id/txtSignup"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:lineSpacingExtra="@dimen/_4pxh"
                    android:singleLine="true"
                    android:text="@{loginVM.loginModel.txtSignup}"
                    style="@style/txtABeeZeeregular17_1" tools:text="@string/lbl_sign_up"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearColumnemail"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16pxh"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_24pxv"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStylecornerRadius_2">
            <TextView android:ellipsize="end" android:id="@+id/txtEmail"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginStart="@dimen/_3pxh"
                android:layout_width="wrap_content"
                android:lineSpacingExtra="@dimen/_4pxh"
                android:singleLine="true"
                android:text="@{loginVM.loginModel.txtEmail}"
                style="@style/txtABeeZeeregular17_2" tools:text="@string/lbl_email"/>
            <com.google.android.material.textfield.TextInputLayout
                android:hint="@string/lbl_email2"
                android:id="@+id/textInputLayEdit"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_width="match_parent"
                android:textColorHint="@color/black_900" style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:ellipsize="end" android:id="@+id/etEdit"
                    android:inputType="textEmailAddress"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@={loginVM.loginModel.etEditValue}"
                    android:textColor="@color/black_900" android:textSize="@dimen/_15pxh"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearColumnpassword"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16pxh"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_39pxv"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStylecornerRadius_2">
            <TextView android:ellipsize="end"
                android:id="@+id/txtPassword"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_width="wrap_content"
                android:lineSpacingExtra="@dimen/_4pxh"
                android:singleLine="true"
                android:text="@{loginVM.loginModel.txtPassword}"
                style="@style/txtABeeZeeregular17_2" tools:text="@string/lbl_password"/>
            <com.google.android.material.textfield.TextInputLayout
                android:hint="@string/lbl_password2"
                android:id="@+id/textInputLayEditpass"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_width="match_parent"
                android:textColorHint="@color/black_900" style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:ellipsize="end" android:id="@+id/etEditpass"
                    android:inputType="textPassword"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@={loginVM.loginModel.etEditpassValue}"
                    android:textColor="@color/black_900" android:textSize="@dimen/_15pxh"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <TextView android:ellipsize="end" android:gravity="end"
            android:id="@+id/txtDidyouforget"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_21pxh"
            android:layout_marginStart="@dimen/_21pxh"
            android:layout_marginTop="@dimen/_30pxv"
            android:layout_width="match_parent"
            android:lineSpacingExtra="@dimen/_4pxh"
            android:singleLine="true"
            android:text="@{loginVM.loginModel.txtDidyouforget}"
            style="@style/txtABeeZeeregular17" textUnderline="true" tools:text="@string/msg_did_you_forget"/>
        <LinearLayout android:gravity="center_vertical"
            android:id="@+id/linearRowloginOne"
            android:layout_height="70dp"
            android:layout_marginBottom="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_21pxh"
            android:layout_marginStart="@dimen/_21pxh"
            android:layout_marginTop="@dimen/_150pxv"
            android:layout_width="match_parent"
            android:orientation="horizontal" style="@style/groupStylelight_blue_100cornerRadius">
            <TextView android:ellipsize="end"
                android:id="@+id/txtLoginOne"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_20pxv"
                android:layout_marginStart="@dimen/_139pxh"
                android:layout_marginTop="@dimen/_22pxv"
                android:layout_weight="0.86" android:layout_width="0dp"
                android:lineSpacingExtra="@dimen/_4pxh"
                android:singleLine="true"
                android:text="@{loginVM.loginModel.txtLoginOne}"
                style="@style/txtABeeZeeregular17_3" tools:text="@string/lbl_login"/>
            <ImageView android:id="@+id/imageArrowright"
                android:layout_height="@dimen/_15pxh"
                android:layout_marginBottom="@dimen/_24pxv"
                android:layout_marginEnd="@dimen/_147pxh"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_24pxv"
                android:layout_width="@dimen/_7pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_arrowright"
                tools:ignore="ContentDescription" tools:src="@drawable/img_arrowright"/>
        </LinearLayout>
    </LinearLayout>
</layout>
